<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="120px"
        android:layout_height="120px"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/empty_photo" />

    <LinearLayout
        android:id="@+id/layout_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_icon"
        android:layout_alignTop="@+id/img_icon"
        android:layout_marginLeft="20px"
        android:layout_toRightOf="@+id/img_icon"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/layout_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/layout_notify_num"
                android:layout_width="33px"
                android:layout_height="30px"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="15px"
                android:background="@drawable/notice"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="10px"
                android:paddingRight="5px"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/tv_notify_num"
                    style="@style/SocialNormalTxtWhiteMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/SocialNormalTxtBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />

                <LinearLayout
                    android:id="@+id/layout_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="30px"
                    android:layout_marginLeft="15px"
                    android:background="@drawable/shape_circle_red_bg"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="5px"
                    android:paddingRight="5px"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/tv_tag"
                        style="@style/SocialNormalTxtWhiteMin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_type"
                    android:layout_width="wrap_content"
                    android:layout_height="30px"
                    android:layout_marginLeft="15px"
                    android:background="@drawable/shape_circle_red_bg"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="5px"
                    android:paddingRight="5px"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/tv_type"
                        style="@style/SocialNormalTxtWhiteMin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:gravity="center_vertical" >

            <LinearLayout
                android:id="@+id/layout_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_num"
                    style="@style/SocialNormalTxtRedSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0" />

                <TextView
                    style="@style/SocialNormalTxtGraySmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=" 人" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_post_num"
                    style="@style/SocialNormalTxtRedSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0" />

                <TextView
                    style="@style/SocialNormalTxtGraySmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=" 帖" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_is_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_is_open"
                    style="@style/SocialNormalTxtRedSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="" />

                <TextView
                    style="@style/SocialNormalTxtGraySmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>