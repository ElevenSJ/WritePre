<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="27px">

        <com.easier.writepre.widget.RoundImageView
            android:id="@+id/img_head"
            android:layout_width="65px"
            android:layout_height="65px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="34px"
            android:paddingRight="0px">

            <TextView
                android:id="@+id/tv_username"
                style="@style/SocialNormalTxtGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="佐助" />

            <TextView
                android:id="@+id/tv_time_ago"
                style="@style/SocialNormalTxtGrayMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30分钟前" />

            <LinearLayout
                android:id="@+id/ll_comment_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:visibility="gone">

                <!--
                <TextView
                    android:id="@+id/tv_comment_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="回复@"
                    android:textColor="@color/black"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_reply_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 鸣人："
                    android:textColor="#1ca3c5"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="字写得真心不错啊字写得真心不错啊字写得真心不错啊字写得真心不错啊字写得真心不错啊字写得真心不错啊"
                    android:textColor="@color/black" />
                -->

                <TextView
                    android:id="@+id/tv_comment"
                    style="@style/SocialNormalTxtBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btn_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:background="@drawable/rc_ic_bubble_left_file"
                    android:drawableLeft="@drawable/rc_ic_voice_receive"
                    android:focusable="false"
                    android:gravity="center"
                    android:paddingLeft="10px"
                    android:paddingRight="10px"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>