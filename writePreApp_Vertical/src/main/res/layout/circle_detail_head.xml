<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10px">

        <include
            android:id="@+id/layout_desc"
            layout="@layout/circle_item_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5px" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/social_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10px"
        android:paddingBottom="26px"
        android:paddingTop="26px">

        <TextView
            android:id="@+id/circle_desc"
            style="@style/SocialNormalTxtGraySmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true" />

        <com.easier.writepre.widget.MyGridLayout
            android:id="@+id/circle_tag_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26px" />
    </LinearLayout>

    <ImageView
        android:id="@+id/drop_img"
        android:layout_width="106px"
        android:layout_height="31px"
        android:layout_marginBottom="30px"
        android:background="@drawable/drop_up" />

    <LinearLayout
        android:id="@+id/ll_my_circle_name"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            />

        <RelativeLayout
            android:id="@+id/rl_my_circle_name"
            android:layout_width="match_parent"
            android:layout_height="99px"
            android:padding="10px">

            <TextView
                style="@style/SocialNormalTxtBlackSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="修改圈子名片" />

            <TextView
                android:id="@+id/tv_my_circle_name"
                style="@style/SocialNormalTxtRedMin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10px"
                android:layout_toLeftOf="@+id/img_name_right"
                android:gravity="center_vertical" />

            <ImageView
                android:id="@+id/img_name_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10px"
                android:src="@drawable/circle_arrow_right" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:background="@drawable/social_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="20px"
        android:paddingLeft="10px"
        android:paddingRight="10px"
        android:paddingTop="10px">

        <TextView
            style="@style/SocialNormalTxtBlackSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/join_info" />

        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1px"-->
            <!--android:layout_marginTop="10px"-->
            <!--android:background="@drawable/social_line" />-->

        <RelativeLayout
            android:id="@+id/layout_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_member_num"
                style="@style/SocialNormalTxtBlackMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10px"
                android:drawablePadding="20px"
                android:drawableRight="@drawable/circle_arrow_right"
                android:gravity="center_vertical"
                android:textColor="#c60000" />

            <HorizontalScrollView
                android:id="@+id/circle_member_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingBottom="20px"
                android:paddingTop="20px"
                android:layout_toLeftOf="@+id/txt_member_num">

                <LinearLayout
                    android:id="@+id/circle_join_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">
                </LinearLayout>
            </HorizontalScrollView>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_join"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/social_line" />

            <Button
                android:id="@+id/join_bt"
                style="@style/SocialNormalTxtWhite"
                android:layout_width="600px"
                android:layout_height="80px"
                android:layout_marginTop="20px"
                android:background="@drawable/bg_btn_selector"
                android:enabled="false"
                android:text="@string/join_txt" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20px" />

    <LinearLayout
        android:id="@+id/ll_add_news"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            />

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="99px"
            android:padding="10px"

            >

            <ImageView
                android:id="@+id/img_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10px"
                android:scaleType="centerInside"
                android:src="@drawable/circle_news" />

            <TextView
                style="@style/SocialNormalTxtBlackSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/img_news"
                android:gravity="center_vertical"
                android:text="公告" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10px"
                android:src="@drawable/circle_arrow_right" />
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_clear_chat_record"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:background="@drawable/social_line" />

        <RelativeLayout
            android:id="@+id/rl_clear_chat_record"
            android:layout_width="match_parent"
            android:layout_height="99px"
            android:background="@color/white"
            android:padding="10px">

            <ImageView
                android:id="@+id/img_clear_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10px"
                android:scaleType="centerInside"
                android:src="@drawable/circle_clear_record" />

            <TextView
                style="@style/SocialNormalTxtBlackSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/img_clear_record"
                android:gravity="center_vertical"
                android:text="清除聊天记录" />

            <TextView
                android:id="@+id/tv_chat_record_count"
                style="@style/SocialNormalTxtRedMin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10px"
                android:gravity="center_vertical" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_circle_code"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/white"
        android:orientation="vertical"

        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:background="@drawable/social_line" />

        <RelativeLayout
            android:id="@+id/rl_circle_code"
            android:layout_width="match_parent"
            android:layout_height="99px"

            android:padding="10px">

            <ImageView
                android:id="@+id/img_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10px"
                android:scaleType="centerInside"
                android:src="@drawable/circle_code" />

            <TextView
                android:id="@+id/tv_set_circle_code"
                style="@style/SocialNormalTxtBlackSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/img_code"
                android:gravity="center_vertical"
                android:text="设置入圈口令" />

            <TextView
                android:id="@+id/tv_circle_code"
                style="@style/SocialNormalTxtRedMin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10px"
                android:layout_toLeftOf="@+id/img_code_right"
                android:gravity="center_vertical" />

            <ImageView
                android:id="@+id/img_code_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10px"
                android:src="@drawable/circle_arrow_right" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_apply_join"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10px"
        android:paddingBottom="20px"
        android:paddingTop="20px"
        android:visibility="gone">

        <TextView
            style="@style/SocialNormalTxtBlackSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/apply_join_txt" />
    </LinearLayout>


</LinearLayout>