<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:id="@+id/rel_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/catalog"
        android:padding="20px">

        <com.easier.writepre.widget.RoundImageView
            android:id="@+id/iv_head"
            android:layout_width="70px"
            android:layout_height="70px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <RelativeLayout
            android:id="@+id/rel_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_head"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/tv_uname"
                style="@style/SocialNormalTxtBlackMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="昵称"
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_tag"
                android:layout_width="66px"
                android:layout_height="24px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15px"
                android:layout_toRightOf="@+id/tv_uname"
                android:background="@drawable/shape_circle_red_bg"
                android:gravity="center"
                android:text="管理员"
                android:textColor="#fff"
                android:textSize="18px" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/rel_content"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:background="@color/bg_gray" />

</RelativeLayout>