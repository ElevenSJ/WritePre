<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/corners_white_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="450px"
        android:layout_height="160px"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SocialNormalTxtBlack"
            android:text="请设置您的昵称" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             style="@style/SocialNormalTxtBlack"
            android:text="(昵称可在个人资料中修改)" />

        <EditText
            android:id="@+id/et_nick"
            android:layout_width="fill_parent"
            android:layout_height="60px"
            android:layout_margin="10px"
            style="@style/SocialNormalTxtBlack"
            android:background="@drawable/shape_circle_button_gray" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_horizontal_line"
        android:layout_width="450px"
        android:layout_height="1px"
        android:background="#d4d4d4" />

    <LinearLayout
        android:layout_width="450px"
        android:layout_height="80px" >

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            style="@style/SocialNormalTxtRed" />

        <ImageView
            android:id="@+id/img_vertical_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="#d4d4d4" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            style="@style/SocialNormalTxtBlack"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消" />
    </LinearLayout>

</LinearLayout>