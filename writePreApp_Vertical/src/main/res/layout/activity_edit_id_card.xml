<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_id_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light_gray"
    android:orientation="vertical"
    tools:context="com.easier.writepre.ui.myinfo.EditIdCardActivity">
    <include layout="@layout/social_topbar_layout"/>
    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/topic_edittext_background"
        android:hint="请输入身份证号（18个数字或字母）"
        android:padding="10px"
        android:singleLine="true"
        style="@style/SocialNormalTxtBlackSmall"
        android:textColorHint="@color/text_color_gray_3"
        />
</LinearLayout>
