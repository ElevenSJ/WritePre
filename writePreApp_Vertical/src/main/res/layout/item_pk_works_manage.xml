<?xml version="1.0" encoding="utf-8"?>
<com.easier.writepre.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/item_grida_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/selected_layout"
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_alignRight="@+id/item_grida_image"
        android:layout_alignTop="@+id/item_grida_image"
        android:gravity="top|right"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="35px"
            android:layout_height="35px"
            android:scaleType="fitXY"
            android:src="@drawable/delete_rectangle"/>
    </LinearLayout>

</com.easier.writepre.widget.SquareLayout>