<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10px" >

    <ImageView
        android:id="@+id/img_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10px"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_red" />

    <LinearLayout
        android:id="@+id/layout_detail"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:layout_toRightOf="@+id/img_read"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_creat_time"
                style="@style/SocialNormalTxtGraySmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10px"
                android:layout_alignParentRight="true" />

            <TextView
                android:id="@+id/tv_title"
                style="@style/SocialNormalTxtBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="20px"
                android:singleLine="true"
                android:layout_toLeftOf="@+id/tv_creat_time" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_msg"
            style="@style/SocialNormalTxtGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:singleLine="true"
            android:visibility="gone"
            android:text="" />
    </LinearLayout>

</RelativeLayout>