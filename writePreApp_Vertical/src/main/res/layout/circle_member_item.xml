<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120px"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.easier.writepre.widget.RoundImageView
        android:id="@+id/imgHead"
        android:layout_width="70px"
        android:layout_height="70px"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15px"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tv_name"
        style="@style/SocialNormalTxtBlackSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20px"
        android:layout_toRightOf="@+id/imgHead" />

    <TextView
        android:id="@+id/tv_tag"
        android:layout_width="66px"
        android:layout_height="24px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15px"
        android:layout_toRightOf="@+id/tv_name"
        android:background="@drawable/shape_circle_red_bg"
        android:gravity="center"
        android:text="@string/circle_creat_user"
        android:textColor="#fff"
        android:textSize="18px" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|right"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/cancle"
            android:layout_width="90px"
            android:layout_height="60px"
            android:layout_marginRight="15px"
            android:layout_toLeftOf="@+id/bt"
            android:background="@drawable/shape_circle_button_red"
            android:gravity="center"
            android:textColor="#c60000"
            android:textSize="20px"
            android:visibility="gone" />
        
        <Button
            android:id="@+id/bt"
            android:layout_width="90px"
            android:layout_height="60px"
            android:layout_marginRight="15px"
            android:background="@drawable/shape_circle_button_red"
            android:gravity="center"
            android:textColor="#c60000"
            android:textSize="20px"
            android:visibility="visible" />
        <ImageView
            android:id="@+id/img_manage"
            android:layout_width="wrap_content"
            android:layout_height="120px"
            android:src="@drawable/list"
            android:gravity="center"
            android:textColor="#c60000"
            android:textSize="20px"
            android:paddingRight="15px"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>