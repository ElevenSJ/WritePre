<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_my_info"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="30px"
		android:paddingRight="30px" >
		<com.easier.writepre.widget.RoundImageView
            android:id="@+id/iv_header"
            android:layout_width="100px"
            android:layout_height="100px" 
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"/>
        <!-- <ImageView
            android:id="@+id/iv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:src="@drawable/icon_def_header" />
 -->
        <LinearLayout
            android:id="@+id/ll_logined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_header"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tv_username"
                style="@style/SocialNormalTxtBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="莫凭澜" />

            <TextView
                android:id="@+id/tv_sign"
                style="@style/SocialNormalTxtGrayMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="10px"
                android:text="食素 洁身 自制" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_unlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_header" >

            <TextView
                android:id="@+id/tv_login"
                style="@style/SocialNormalTxtRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="登录" />

            <TextView
                style="@style/SocialNormalTxtRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text=" / " />

            <TextView
                android:id="@+id/tv_register"
                style="@style/SocialNormalTxtRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="注册" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/select" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="@color/bg_gray" />

</LinearLayout>