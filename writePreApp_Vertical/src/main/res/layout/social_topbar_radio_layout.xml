<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100px"
    android:background="@color/title_bg" >

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:onClick="onTopLeftClick"
        android:padding="25px"
        android:scaleType="centerInside"
        android:src="@drawable/go_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/txt_right"
            style="@style/SocialTitleCenterTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交友圈"
            android:tag="1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SocialNormalTxtBlack"
            android:gravity="center"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:text="|"
            />

        <TextView
            android:id="@+id/txt_center"
            style="@style/SocialTitleCenterTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="班级圈"
            android:tag="2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SocialNormalTxtBlack"
            android:gravity="center"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:text="|"
            />
        
        <TextView
            android:id="@+id/txt_left"
            style="@style/SocialTitleCenterTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学习圈"
            android:tag="0"
            />
    </LinearLayout>
   

    <ImageView
        android:id="@+id/top_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:onClick="onTopRightClick"
        android:padding="30px"
        android:visibility="gone" />

    <TextView
        android:id="@+id/top_right_txt"
        style="@style/SocialTitleRightTxt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="30px"
        android:clickable="true"
        android:onClick="onTopRightTxtClick"
        android:gravity="center"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@drawable/social_line" />

</RelativeLayout>