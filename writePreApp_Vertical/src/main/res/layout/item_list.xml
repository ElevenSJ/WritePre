<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:descendantFocusability= "blocksDescendants" >
    <RelativeLayout
    	android:id="@+id/rl_relative"
		android:layout_width="match_parent"
		android:layout_height="100px"
		android:background="@color/white"
		android:paddingLeft="30px"
		android:paddingRight="30px"
		>
		<ImageView 
		    android:id="@+id/img_left"
		    android:layout_width="50px"
		    android:layout_height="50px"
		    android:src="@drawable/dianzan_xuanzhong"
		    android:layout_centerVertical="true"
		    android:layout_marginRight="10px"
		    android:scaleType="centerInside"
			android:visibility="gone"
			android:contentDescription="@null"
		    />
		<TextView
			android:id="@+id/tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_download"
            style="@style/SocialNormalTxtBlackSmall"
            android:layout_centerVertical="true" 
            android:layout_toRightOf="@id/img_left"
            />
		<TextView 
		    android:id="@+id/tv_center"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
			android:layout_toLeftOf="@+id/img_right"
			android:layout_toRightOf="@+id/tv_left"
			android:layout_centerVertical="true"
			android:layout_marginLeft="20px"
			android:layout_marginRight="20px"
			android:gravity="right|center_vertical"
		    android:text="18936911940"
		    style="@style/SocialNormalTxtBlackSmall"
		    android:visibility="gone"
		    />
		<ImageView
		    android:id="@+id/img_right"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_toLeftOf="@+id/img_enter"
		    android:visibility="gone"
		    android:layout_centerVertical="true"
		    />
		<TextView 
		    android:id="@+id/tv_right"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:visibility="gone"
		    android:text="已经是最新版本"
		    android:layout_toLeftOf="@+id/img_enter"
		    android:layout_centerVertical="true"
		    style="@style/SocialNormalTxtGraySmall"
		    android:singleLine="true"
		    android:maxWidth="400px"
		    />
		<Button
		    android:id="@+id/btn_right"
		    android:layout_width="@dimen/notify_num_bt_size"
		    android:layout_height="@dimen/notify_num_bt_size"
		    android:text=""
		    style="@style/SocialNormalTxtWhiteMin"
		    android:visibility="gone"
		    android:background="@drawable/circle_red_bg"
		    android:layout_toLeftOf="@+id/img_enter"
		    android:layout_centerVertical="true"
		    />
        <ImageView
            android:id="@+id/img_enter"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/select"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10px"
			/>
        <View 
	    android:id="@+id/v_line_short"
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="@color/bg_gray"
	    android:layout_alignParentBottom="true"
	    android:layout_alignLeft="@+id/tv_left"
	    android:visibility="gone"
	    />
	</RelativeLayout>
	<View 
	    android:id="@+id/v_line"
	    android:layout_width="match_parent"
	    android:layout_height="10px"
	    android:background="@color/bg_gray"
	    android:visibility="gone"
	    />
</LinearLayout>
