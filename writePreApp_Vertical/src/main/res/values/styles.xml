        <item name="android:indeterminateDrawable">@drawable/ratingbar_drawable_small</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <style name="RatingBar_Full" parent="@android:style/Widget.RatingBar">
