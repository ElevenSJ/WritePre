<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowAnimationStyle">@style/ZOOMWindowAnimTheme</item>
    </style>

    <style name="ActivityTheme" parent="android:Theme.Light.NoTitleBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="ActivityThemeNormal" parent="ActivityTheme">
        <item name="android:windowAnimationStyle">@style/ZOOMWindowAnimTheme</item>
    </style>

    <style name="ActivityThemePull" parent="ActivityTheme">
        <item name="android:windowAnimationStyle">@style/FeelyouWindowAnimTheme</item>
    </style>

    <style name="ZOOMWindowAnimTheme" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@android:anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="FeelyouWindowAnimTheme" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/in_bottomtop</item>
        <item name="android:activityOpenExitAnimation">@anim/out_topbottom</item>
        <item name="android:activityCloseEnterAnimation">@anim/in_bottomtop</item>
        <item name="android:activityCloseExitAnimation">@anim/out_topbottom</item>
    </style>

    <style name="loading_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

